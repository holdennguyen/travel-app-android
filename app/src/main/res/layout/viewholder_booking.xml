<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Tour Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/tourImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grey_bg"
                android:scaleType="centerCrop"
                tools:src="@drawable/background" />

        </androidx.cardview.widget.CardView>

        <!-- Tour Title -->
        <TextView
            android:id="@+id/tourTitleTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/menuBtn"
            app:layout_constraintStart_toEndOf="@+id/imageCardView"
            app:layout_constraintTop_toTopOf="@+id/imageCardView" />

        <!-- Tour Location -->
        <TextView
            android:id="@+id/tourLocationTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/address"
            android:textColor="@color/darkBlue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tourTitleTxt"
            app:layout_constraintStart_toStartOf="@+id/tourTitleTxt"
            app:layout_constraintTop_toBottomOf="@+id/tourTitleTxt" />

        <!-- Price and Guests -->
        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/price_placeholder"
            android:textColor="@color/purple"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tourTitleTxt"
            app:layout_constraintTop_toBottomOf="@+id/tourLocationTxt" />

        <TextView
            android:id="@+id/guestsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/guests_count"
            android:textColor="@color/darkBlue"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/priceTxt"
            app:layout_constraintStart_toEndOf="@+id/priceTxt" />

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status Section -->
        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCardView">

            <!-- Booking Status -->
            <TextView
                android:id="@+id/bookingStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_bg"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/booking_confirmed"
                android:textColor="@color/darkBlue"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Payment Status -->
            <TextView
                android:id="@+id/paymentStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/purple_bg"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/payment_paid"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Order ID -->
            <TextView
                android:id="@+id/orderIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textColor="@color/darkBlue"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Date Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusLayout">

            <!-- Booking Date -->
            <TextView
                android:id="@+id/bookingDateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/booking_date"
                android:textColor="@color/darkBlue"
                android:textSize="10sp" />

            <!-- Tour Date -->
            <TextView
                android:id="@+id/tourDateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tour_date"
                android:textColor="@color/darkBlue"
                android:textSize="10sp"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 